
@{
    Layout = null;
    @model NF.Framework.DTO.TS_USERDTO
    @Html.ValidationSummary(true)
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>用户注册</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Assets/css/login.css">

</head>

<body>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td align="center" valign="top">
                <div class="head">
                    <table width="900px" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td style="height:50px; text-align:left; width:50px;"><img src="~/Assets/images/login_img/logo.jpg" width="50" height="50"></td>
                            <td style="text-align:left; padding-left:15px;">
                                <h3>销售管理系统 <small>邢钢钢铁责任有限公司</small></h3>
                            </td>
                            <td style="text-align:right;"><a href="/Auth/Login" class="btn-link">立即登录</a></td>
                        </tr>
                    </table>

                </div>
                <div class="main">
                    <div class="main_top">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td style="height:40px; text-align:center;"><h3>用户注册</h3></td>
                            </tr>
                            <tr>
                                <td valign="top" style="padding-top:20px;">
                                    @*<form class="form-horizontal" action="/Auth/Register" method="post">*@
                                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
    {

                                <table class="table">
                                    <tr>
                                        <td style=" width:100px; text-align:right">登录名</td>
                                        <td> @Html.TextBoxFor(m => m.C_ACCOUNT, new { @class = "form-control", placeholder = "必填项" })@Html.ValidationMessageFor(m => m.C_ACCOUNT)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">新密码</td>
                                        <td> @Html.PasswordFor(m => m.C_PASSWORD, new { @class = "form-control", placeholder = "必填项" })@Html.ValidationMessageFor(m => m.C_PASSWORD)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">真实姓名</td>
                                        <td> @Html.TextBoxFor(m => m.C_NAME, new { @class = "form-control", placeholder = "请输入真实姓名" })@Html.ValidationMessageFor(m => m.C_NAME)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">固定电话</td>
                                        <td> @Html.TextBoxFor(m => m.C_PHONE, new { @class = "form-control", placeholder = "请输入固定电话" })@Html.ValidationMessageFor(m => m.C_PHONE)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">手机号码</td>
                                        <td> @Html.TextBoxFor(m => m.C_MOBILE, new { @class = "form-control", placeholder = "必填项" })@Html.ValidationMessageFor(m => m.C_MOBILE)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">传真</td>
                                        <td> @Html.TextBoxFor(m => m.C_MOBILE2, new { @class = "form-control", placeholder = "请输入传真" })@Html.ValidationMessageFor(m => m.C_MOBILE2)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">邮箱</td>
                                        <td>@Html.TextBoxFor(m => m.C_EMAIL, new { @class = "form-control", placeholder = "必填项" })@Html.ValidationMessageFor(m => m.C_EMAIL)</td>
                                    </tr>
                                    <tr>
                                        <td style=" text-align:right">公司名称</td>
                                        <td>@Html.TextBoxFor(m => m.C_SHORTNAME, new { @class = "form-control", placeholder = "请输入公司全称(必填项)" })@Html.ValidationMessageFor(m => m.C_SHORTNAME)</td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td> <button type="submit" class="btn  btn-info btn-block" style="width:100px;">注 册</button></td>
                                    </tr>
                                </table>
                                    
                                    }
                                </td>
                            </tr>
                        </table>

                    </div>
                </div>
            </td>
        </tr>
    </table>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
