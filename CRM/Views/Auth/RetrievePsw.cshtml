
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>找回密码</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/login.css" rel="stylesheet" />

</head>

<body>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td align="center" valign="top">
                <div class="head">
                    <table width="900px" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td style="height:50px; text-align:left; width:50px;"><img src="~/Assets/images/login_img/logo.jpg" width="50" height="50"></td>
                            <td style="text-align:left; padding-left:15px;">
                                <h3>销售管理系统 <small>邢钢钢铁责任有限公司</small></h3>
                            </td>
                            <td style="text-align:right;"><a href="/Auth/Login" class="btn-link">登录</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="/Auth/Register" class="btn-link">注册</a></td>
                        </tr>
                    </table>

                </div>
                <div class="main">
                    <div class="main_top">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td style="height:40px; text-align:center; border-bottom:solid 1px #f4f4f4"><h3>找回密码</h3></td>
                            </tr>
                            <tr>
                                <td valign="top" style="padding-top:20px;">
                                    <form action="/Auth/RetrievePsw" method="post" class="form-horizontal">
                                        @using (Html.BeginForm("RetrievePsw", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">用户名</label>
                                                <div class="col-sm-5">
                                                    @Html.TextBox("account", null, new { @class = "form-control", placeholder = "请输入用户名" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">验证码</label>
                                                <div class="col-sm-2">
                                                    @Html.TextBox("verify", "", new { style = "width:120px;", placeholder = "验证码", @class = "form-control" })
                                                </div>
                                                <div class="col-sm-1">
                                                    <img style="cursor: pointer; vertical-align:middle; " width="87" height="34" src="@Url.Action("VerifyCode", "Auth")" id="verify" title="看不清？点击换一个" onclick="refresh(this)">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-offset-3 col-sm-6" style="text-align:left; font-size:14px; color:red;">
                                                    <label style="color:red">提示：&nbsp;@Html.ValidationMessage("error") </label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-offset-3 col-sm-3">
                                                    <button type="submit" class="btn  btn-info btn-block">提 交</button>
                                                </div>
                                            </div>
                                        }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <script type="text/javascript">
        function refresh(obj) {
            $(obj).attr("src", "/Auth/VerifyCode?random=" + Math.random());
        }
    </script>
</body>
</html>
