    <script>

        var ws;
        var url = '@websocketUrl';
        var isShutdown = false;
        function initeWS(RE_CON) {
            if (ws) {
                ws.close();
            }

            var user = '@user.Account';
            ws = new WebSocket(url + user +'/'+RE_CON);
            ws.onopen = function () {
                //$('#msg').text('connecteds');
                console.log('connected');
            }

            ws.onmessage = function (evt) {
                var msg = evt.data.split(' ');
                if (msg[0] == 'ShutDown') {
                    isShutdown = true;
                    ws.close();
                    alert(msg[1]);
                    window.location.href = '/Auth/LogOut';
                }
                if (msg.length > 1) {
                    console.log(msg[1]);
                }
            }

            ws.onerror = function (evt) {
                console.log('error by ' + evt.reason);
            }

            ws.onclose = function (evt) {
                console.log('closed reason by ' + evt.reason);
            }
        }

        $().ready(function () {

                isShutdown = false;
                console.log('conn ing...');

                initeWS();
                startHeartBeat();

            function startHeartBeat() {
                // 断线重连机制
                var intel = setInterval(function () {
                    if (isShutdown == true) {
                        console.log('stop...');
                        clearInterval(intel);
                        return;
                    }
                    // 5秒心跳，如果心跳失败重新连接
                    try {
                        if (ws.readyState == WebSocket.OPEN) {
                            ws.send('HEARTBEAT');
                            console.log('heartbeat');
                        }
                        else {
                            console.log('re connecton');
                            initeWS('RE_CON');
                        }
                    } catch (e) {
                        console.log('socket reconnection');
                    }
                }, 5000);
            }
        });

        window.onbeforeunload = function (event) {
            if (ws) {
                ws.close();
            }

            return true;
        }
    </script>
