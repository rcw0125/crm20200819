@model NF.Framework.DTO.TMC_CUST_EVALDTO
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @Html.Partial("~/Views/Shared/_Assets.cshtml")
    <title>顾客满意度调查表</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <table class="table table-bordered">
            <tr>
                <td colspan="8" style="text-align: center">
                    <h4>顾客满意度调查表</h4>
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <p>尊敬的客户：</p>
                    <p>
                        感谢您使用邢钢线材产品！为了使我公司产品质量和服务得到持续改进，不断满足您的需求，请您对我公司产品的质量和服务给予客观评价，并及时反馈我们。（按10分制打分，1分表示您的评价很低，10分表示评价很高）。如果您也使用过下表所列其他钢厂的产品，请对其情况进行评价。
                        （地 址：邢台市钢铁南路266号      客服电话：400 612 2666）
                    </p>
                </td>
            </tr>
            <tr>
                <td>客户单位</td>
                <td>
                    @Html.HiddenFor(x => x.N_CUST_TYPE)
                    <input type="text" disabled="disabled" value="@Model.C_CUST" />
                    <input type="hidden" id="C_CUST" name="C_CUST" value="@Model.C_CUST" />
                    <span style=" color:red;">   @Html.ValidationMessageFor(x => x.C_CUST)</span>
                    <input type="hidden" id="ResultType" name="ResultType" value="@Model.ResultType" />
                </td>
                <td>主要采购产品</td>
                <td>
                    @Html.HiddenFor(x => x.C_PROD)
                    <input type="text" id="prod"  style="width: 50%" value="@Model.C_PROD" /> 
                    <span style=" color:red;">   @Html.ValidationMessageFor(x => x.C_PROD)</span>
                    <a href="javascript:void(0);" onclick="openWeb(1);"><span class="glyphicon glyphicon-search"></span></a>
                </td>
                <td>填报人</td>
                <td>
                    <input type="text" disabled="disabled" value="@Model.C_EMP_NAME" />
                    <input type="hidden" id="C_EMP_NAME" name="C_EMP_NAME" value="@Model.C_EMP_NAME" />
                    <span style=" color:red;">   @Html.ValidationMessageFor(x => x.C_EMP_NAME)</span>
                </td>
                <td>联系电话</td>
                <td>
                    @Html.TextBoxFor(x => x.C_TEL, new { style = "width: 99%", maxlength = "11" })
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>评价项目</th>
                                <th>邢钢</th>
                                <th>台湾中钢</th>
                                <th>宝钢</th>
                                <th>武钢</th>
                                <th>兴澄特钢</th>
                                <th>沙钢</th>
                                <th>永钢</th>
                                <th>湘钢</th>
                                <th>中天</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.EvalSubs != null && Model.EvalSubs.Count > 0)
                            {
                                for (int i = 0; i < Model.EvalSubs.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Model.EvalSubs[i].C_ITEM_NAME
                                            @Html.HiddenFor(x => x.EvalSubs[i].C_ITEM_NAME, new { name = Model.EvalSubs[i].C_ITEM_NAME })
                                            @Html.HiddenFor(x => x.EvalSubs[i].C_ITEM_ID, new { name = Model.EvalSubs[i].C_ITEM_ID })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XG_SCORE, new { name = Model.EvalSubs[i].N_XG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_TWZG_SCORE, new { name = Model.EvalSubs[i].N_TWZG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_BG_SCORE, new { name = Model.EvalSubs[i].N_BG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_WG_SCORE, new { name = Model.EvalSubs[i].N_WG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XCTG_SCORE, new { name = Model.EvalSubs[i].N_XCTG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_SG_SCORE, new { name = Model.EvalSubs[i].N_SG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_YG_SCORE, new { name = Model.EvalSubs[i].N_YG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XIANGG_SCORE, new { name = Model.EvalSubs[i].N_XIANGG_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_ZT_SCORE, new { name = Model.EvalSubs[i].N_ZT_SCORE, style = "width:50px", @class = "num", maxlength = "2" })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="8" style="text-align: center">
                    <button id="btnSave" class="btn btn-primary btn-xs" type="submit">提交</button>&nbsp;&nbsp;
                </td>
            </tr>

        </table>

    }
    <script type="text/javascript">
        $(function () {

            $("#btnSave").click(function () {
                $("#ResultType").val(0);
            });

            if ($("#ResultType").val() == "1") {
                alert("提交成功");
            }
        });

        function openWeb(index) {
            switch (index) {
                case 1:
                    var _w = window.screen.availWidth;//$(window).width();
                    var _h = window.screen.availHeight;//$(window).height();
                    _iframe('../../Common/_MatGroup.aspx', '800', '450', '产品');
                    break;
            }
        }

        function SetMatClass(stlGrd) {
            $("#C_PROD").val(stlGrd);
            $("#prod").val(stlGrd);
            close();
        }
    </script>
</body>
</html>
