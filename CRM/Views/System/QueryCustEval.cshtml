@model NF.Framework.DTO.TMC_CUST_EVALDTO
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @Html.Partial("~/Views/Shared/_Assets.cshtml")
    <title>顾客满意度调查表</title>
</head>
<body>
    <input type="button" class="btn btn-warning btn-xs" name="Submit" onclick="javascript:history.back(-1);" value="返回上一页">
    @using (Html.BeginForm())
    {
        <table class="table table-bordered">
            <tr>
                <td colspan="8" style="text-align: center">
                    <h4>顾客满意度调查表</h4>
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <p>尊敬的客户：</p>
                    <p>
                        感谢您使用邢钢线材产品！为了使我公司产品质量和服务得到持续改进，不断满足您的需求，请您对我公司产品的质量和服务给予客观评价，并及时反馈我们。（按10分制打分，1分表示您的评价很低，10分表示评价很高）。如果您也使用过下表所列其他钢厂的产品，请对其情况进行评价。
                        （地 址：邢台市钢铁南路266号      客服电话：400 612 2666）
                    </p>
                </td>
            </tr>
            <tr>
                <td>客户单位</td>
                <td>
                    @Model.C_CUST
                </td>
                <td>主要采购产品</td>
                <td>
                    @Model.C_PROD
                </td>
                <td>填报人</td>
                <td>
                    @Model.C_EMP_NAME
                </td>
                <td>联系电话</td>
                <td>
                    @Model.C_TEL
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>评价项目</th>
                                <th>邢钢</th>
                                <th>台湾中钢</th>
                                <th>宝钢</th>
                                <th>武钢</th>
                                <th>兴澄特钢</th>
                                <th>沙钢</th>
                                <th>永钢</th>
                                <th>湘钢</th>
                                <th>中天</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.EvalSubs != null && Model.EvalSubs.Count > 0)
                            {
                                for (int i = 0; i < Model.EvalSubs.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Model.EvalSubs[i].C_ITEM_NAME
                                            @Html.HiddenFor(x => x.EvalSubs[i].C_ITEM_NAME, new { name = Model.EvalSubs[i].C_ITEM_NAME })
                                            @Html.HiddenFor(x => x.EvalSubs[i].C_ITEM_ID, new { name = Model.EvalSubs[i].C_ITEM_ID })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XG_SCORE, new { name = Model.EvalSubs[i].N_XG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_TWZG_SCORE, new { name = Model.EvalSubs[i].N_TWZG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_BG_SCORE, new { name = Model.EvalSubs[i].N_BG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_WG_SCORE, new { name = Model.EvalSubs[i].N_WG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XCTG_SCORE, new { name = Model.EvalSubs[i].N_XCTG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_SG_SCORE, new { name = Model.EvalSubs[i].N_SG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_YG_SCORE, new { name = Model.EvalSubs[i].N_YG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_XIANGG_SCORE, new { name = Model.EvalSubs[i].N_XIANGG_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EvalSubs[i].N_ZT_SCORE, new { name = Model.EvalSubs[i].N_ZT_SCORE, style = "width:50px", disabled = "disabled" })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>
    }
</body>
</html>
